msgid "[[!meta title=\"Tails 2013 summit report\"]]\n"
msgstr "[[!meta title=\"Informe de la cimera de Tails 2013\"]]\n"

#. type: Plain text
#, no-wrap
msgid "[[!meta date=\"Fri, 09 Aug 2013 09:12:07 +0000\"]]\n"
msgstr "[[!meta date=\"Fri, 09 Aug 2013 09:12:07 +0000\"]]\n"

#. type: Plain text
#, no-wrap
