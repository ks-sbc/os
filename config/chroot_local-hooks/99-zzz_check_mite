#!/bin/bash

set -e
set -u

echo "Looking for potentially vulnerable Mite code"

MITE_FILES=$(find / -type f -name '*.mite.pm' || :)

if [ -n "$MITE_FILES" ]; then
    echo "E: Found .mite.pm files generated by Mite:" >&2
    echo "$MITE_FILES" >&2
    echo "For context, see tails#20701." >&2
    exit 1
fi
